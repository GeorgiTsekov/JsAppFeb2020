{{!-- {{> header }}

<!-- Dashboard (All recipes View) -->
<div style="margin-top:3%; padding-top: 3%;" class="container">


    {{#each recipes}}
    <div style="margin-bottom:25%;" class="row">
        <div class="col-lg-12">
            <div class="card mt-4">
                <img style="max-width: 1200px; height: auto; border-radius:25px;" class="card-img-top img-fluid"
                    src="{{ pictureUrl }}" alt="">
                <div class="card-body">
                    <h3 class="card-title">{{ recipe }}</h3>
                    <p class="card-text">{{ description }}</p>
                    <a href="#/recipe/details/{{ id }}" class="btn btn-success">Become a donor $$$</a>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <h1 class="text-center">NO recipeS :(</h1>
    {{/each}}

</div>
<!-- ./Dashboard (All recipes View) -->

{{> footer }} --}}


