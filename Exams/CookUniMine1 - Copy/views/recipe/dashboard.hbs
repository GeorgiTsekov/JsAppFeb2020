{{> header }}
<h1 class="text-center">Our Recipes</h1>

{{#each recipes}}
<div id="sharedRecipes">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="our-team-main">

                    <div class="team-front">
                        <img src="{{categoryImageURL}}" />
                        <h3>{{meal}}</h3>
                        <p>{{category}}</p>
                    </div>

                    <div class="team-back">
                        <div class="back-side-info">
                            <h4>Ingredients</h4>
                            <ul>
                                {{#each ingredients}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                            <a href="#/recipe/details/{{id}}">View the recepie</a>
                        </div>

                        <img class="foodImage"
                            src="{{foodImageURL}}" />
                    </div>

                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div id='foodNotFound'>
        <img src="https://t4.ftcdn.net/jpg/00/62/17/31/240_F_62173114_ozantkVtkPgzL0fxssAkTqKX1FHPr0UW.jpg" />
        <h3>Food not found...</h3>
    </div>
    {{/each}}
    {{> footer }}